{
  "$schema": "https://biomejs.dev/schemas/2.0.0-beta.1/schema.json",
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true,
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/*",
      "!**/dist/**",
      "!**/node_modules/**",
      "!*.d.ts",
      "!docs/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "includes": [
      "**/*",
      "!**/dist/**",
      "!**/node_modules/**",
      "!*.d.ts",
      "!docs/**"
    ]
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "enabled": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "assist": {
    "enabled": true,
    "includes": [
      "**/*",
      "!**/dist/**",
      "!**/node_modules/**",
      "!*.d.ts",
      "!docs/**"
    ],
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "includes": [
      "**/*",
      "!**/dist/**",
      "!**/node_modules/**",
      "!*.d.ts",
      "!docs/**"
    ],
    "rules": {
      "recommended": true,
      "nursery": {
        "recommended": true,
        "noEnum": "off",
        "noSecrets": "off"
      },
      "correctness": {
        "noNodejsModules": "off",
        "noUndeclaredDependencies": "off"
      },
      "performance": {
        "noReExportAll": "off",
        "noBarrelFile": "off"
      }
    }
  }
}
