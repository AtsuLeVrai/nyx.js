{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true,
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "include": [
      "packages/*/src/**/*.ts",
      "packages/*/src/**/*.js",
      "internals/*/src/**/*.ts",
      "internals/*/src/**/*.js",
      "scripts/**/*.js",
      "scripts/**/*.ts"
    ],
    "ignore": ["**/dist/**", "**/node_modules/**", "*.d.ts", "**/*.d.ts"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "include": [
      "packages/*/src/**/*.ts",
      "packages/*/src/**/*.js",
      "internals/*/src/**/*.ts",
      "internals/*/src/**/*.js",
      "scripts/**/*.js",
      "scripts/**/*.ts"
    ],
    "ignore": ["**/dist/**", "**/node_modules/**", "*.d.ts", "**/*.d.ts"]
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "enabled": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "organizeImports": {
    "enabled": true,
    "include": [
      "packages/*/src/**/*.ts",
      "packages/*/src/**/*.js",
      "internals/*/src/**/*.ts",
      "internals/*/src/**/*.js",
      "scripts/**/*.js",
      "scripts/**/*.ts"
    ],
    "ignore": ["**/dist/**", "**/node_modules/**", "*.d.ts", "**/*.d.ts"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "nursery": {
        "all": true,
        "noEnum": "off",
        "noSecrets": "off"
      },
      "correctness": {
        "noNodejsModules": "off",
        "noUndeclaredDependencies": "off"
      },
      "performance": {
        "noReExportAll": "off",
        "noBarrelFile": "off"
      }
    },
    "include": [
      "packages/*/src/**/*.ts",
      "packages/*/src/**/*.js",
      "internals/*/src/**/*.ts",
      "internals/*/src/**/*.js",
      "scripts/**/*.js",
      "scripts/**/*.ts"
    ],
    "ignore": ["**/dist/**", "**/node_modules/**", "*.d.ts", "**/*.d.ts"]
  },
  "overrides": [
    {
      "include": [
        "internals/*/src/**/*.ts",
        "internals/*/src/**/*.js",
        "scripts/**/*.js",
        "scripts/**/*.ts"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off",
            "noConsoleLog": "off"
          }
        }
      }
    }
  ]
}
