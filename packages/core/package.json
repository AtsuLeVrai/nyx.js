{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@nyxjs/core",
  "version": "1.0.0",
  "description": "Type-Safe Discord API Definitions and Utilities",
  "readme": "README.md",
  "license": "AGPL-3.0-only",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AtsuLeVrai/nyx.js",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/AtsuLeVrai/nyx.js/issues"
  },
  "author": {
    "name": "AtsuLeVrai",
    "url": "https://github.com/AtsuLeVrai"
  },
  "scripts": {
    "build:dev": "rimraf dist && tsc -p tsconfig.json",
    "build:prod": "node ../../scripts/build.js",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}
