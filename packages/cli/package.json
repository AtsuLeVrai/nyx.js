{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@nyxjs/cli",
  "version": "1.0.0",
  "description": "The official CLI for Nyx.js",
  "readme": "README.md",
  "license": "AGPL-3.0-only",
  "type": "module",
  "files": ["dist"],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "nyxjs": "./dist/index.mjs"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AtsuLeVrai/nyx.js",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/AtsuLeVrai/nyx.js/issues"
  },
  "author": {
    "name": "AtsuLeVrai",
    "url": "https://github.com/AtsuLeVrai"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=development node ../../scripts/build.js",
    "build:prod": "cross-env NODE_ENV=production node ../../scripts/build.js",
    "format": "biome format --write .",
    "lint": "biome lint --write --unsafe .",
    "check": "biome check --write --unsafe .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@swc/core": "^1.10.15",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "cosmiconfig": "^9.0.0",
    "deepmerge-ts": "^7.1.4",
    "execa": "^9.5.2",
    "globby": "^14.1.0",
    "gradient-string": "^3.0.0",
    "inquirer": "^12.4.1",
    "ora": "^8.2.0",
    "type-fest": "^4.34.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.13.1",
    "cross-env": "^7.0.3",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
