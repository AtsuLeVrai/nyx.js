{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@nyxjs/store",
  "version": "1.0.0",
  "description": "High-performance in-memory data store for Discord bots using enhanced Map functionality.",
  "readme": "README.md",
  "license": "AGPL-3.0-only",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AtsuLeVrai/nyx.js",
    "directory": "packages/store"
  },
  "bugs": {
    "url": "https://github.com/AtsuLeVrai/nyx.js/issues"
  },
  "author": {
    "name": "AtsuLeVrai",
    "url": "https://github.com/AtsuLeVrai"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=development node ../../scripts/build.js",
    "build:prod": "cross-env NODE_ENV=production node ../../scripts/build.js",
    "check": "biome check --write --unsafe --verbose src",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "deepmerge-ts": "^7.1.5",
    "lodash-es": "^4.17.21",
    "lru-cache": "^11.1.0",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0-beta.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.14.0",
    "cross-env": "^7.0.3",
    "typescript": "^5.8.3"
  }
}
