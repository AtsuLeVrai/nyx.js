{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@nyxjs/store",
  "version": "1.0.0",
  "description": "High-performance in-memory data store for Discord bots using enhanced Map functionality.",
  "readme": "README.md",
  "license": "AGPL-3.0-only",
  "type": "module",
  "files": ["dist"],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AtsuLeVrai/nyx.js",
    "directory": "packages/store"
  },
  "bugs": {
    "url": "https://github.com/AtsuLeVrai/nyx.js/issues"
  },
  "author": {
    "name": "AtsuLeVrai",
    "url": "https://github.com/AtsuLeVrai"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=development node ../../scripts/build.js",
    "build:prod": "cross-env NODE_ENV=production node ../../scripts/build.js",
    "format": "biome format --write .",
    "lint": "biome lint --write --unsafe .",
    "check": "biome check --write --unsafe .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "deepmerge-ts": "7.1.4",
    "lodash-es": "4.17.21",
    "lru-cache": "11.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/lodash-es": "4.17.12",
    "@types/node": "^22.13.4",
    "cross-env": "^7.0.3",
    "typescript": "^5.7.3",
    "vitest": "^3.0.6"
  }
}
