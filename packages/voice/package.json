{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@nyxjs/voice",
  "version": "1.0.0",
  "description": "Efficient Voice Gateway and Audio Management for Nyx.js",
  "readme": "README.md",
  "license": "AGPL-3.0-only",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AtsuLeVrai/nyx.js",
    "directory": "packages/store"
  },
  "bugs": {
    "url": "https://github.com/AtsuLeVrai/nyx.js/issues"
  },
  "author": {
    "name": "AtsuLeVrai",
    "url": "https://github.com/AtsuLeVrai"
  },
  "scripts": {
    "build:dev": "rimraf dist && tsc -p tsconfig.json",
    "build:prod": "node ../../scripts/build.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@nyxjs/core": "workspace:^",
    "@nyxjs/gateway": "workspace:^",
    "eventemitter3": "^5.0.1",
    "ws": "^8.18.1",
    "zod": "^3.24.3",
    "zod-validation-error": "^3.4.0"
  },
  "optionalDependencies": {
    "@discordjs/opus": "^0.10.0",
    "opusscript": "^0.1.1",
    "libsodium-wrappers": "^0.7.15",
    "sodium-native": "^5.0.1",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/node": "^22.14.1",
    "@types/sodium-native": "^2.3.9",
    "@types/ws": "^8.18.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}
