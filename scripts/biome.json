{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "include": ["**/*.{js,ts}"]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "off",
        "noConsoleLog": "off",
        "noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noUselessElse": "warn"
      },
      "complexity": {
        "noForEach": "off",
        "useOptionalChain": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      }
    }
  }
}
