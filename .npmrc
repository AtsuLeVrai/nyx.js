# Workspace Configuration
shared-workspace-lockfile=true
link-workspace-packages=true

# Native Dependencies Hoisting
public-hoist-pattern[]=*erlpack*
public-hoist-pattern[]=*sharp*
public-hoist-pattern[]=*bufferutil*
public-hoist-pattern[]=*fzstd*
public-hoist-pattern[]=*zlib-sync*

# Package Resolution
strict-peer-dependencies=false
auto-install-peers=true

# Performance and Builds
node-linker=isolated
shamefully-hoist=false

# Recommended Settings for Turborepo
prefer-frozen-lockfile=true
save-exact=true

# Concurrency Configuration
child-concurrency=8
network-concurrency=8