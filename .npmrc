# Native dependencies hoisting
public-hoist-pattern[]=*erlpack*
public-hoist-pattern[]=*bufferutil*
public-hoist-pattern[]=*fzstd*
public-hoist-pattern[]=*zlib-sync*
public-hoist-pattern[]=*@swc*
public-hoist-pattern[]=*sharp*

# Workspace Configuration
shared-workspace-lockfile=true
save-workspace-protocol=rolling
workspace-concurrency=4

# Package Resolution
strict-peer-dependencies=false
auto-install-peers=true
dedupe-peer-dependents=true

# Native Modules Configuration
node-linker=hoisted
enable-pre-post-scripts=true
ignore-scripts=false

# Build Configuration
child-concurrency=4
network-concurrency=4
prefer-frozen-lockfile=true

# Development Settings
save-exact=true
save-prefix=''
engine-strict=true

# Optimization
compress-store=true
side-effects-cache=true