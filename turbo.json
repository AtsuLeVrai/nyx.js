{
  "$schema": "https://turbo.build/schema.v2.json",
  "ui": "tui",
  "globalDependencies": [".env", "tsconfig.json", "biome.json"],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "DISCORD_TOKEN",
    "API_VERSION",
    "GATEWAY_VERSION"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "build:watch": {
      "dependsOn": ["^build:watch"],
      "outputs": ["dist/**"],
      "env": ["NODE_ENV"],
      "cache": false,
      "persistent": true
    },
    "build:prod": {
      "dependsOn": ["^build:prod"],
      "outputs": ["dist/**"],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "check": {
      "outputs": [],
      "cache": true
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "//#clean": {
      "cache": false
    }
  }
}
