{
  "$schema": "./node_modules/turbo/schema.json",
  "ui": "tui",
  "globalDependencies": [".env", "tsconfig.json", "biome.json"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^start"],
      "outputs": [],
      "cache": false
    },
    "build:dev": {
      "dependsOn": ["biome:check", "^build:dev"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "build:watch": {
      "outputs": ["dist/**"],
      "cache": false,
      "persistent": true
    },
    "build:prod": {
      "dependsOn": ["biome:check", "type-check", "^build:prod"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "biome:check": {
      "outputs": [],
      "cache": true
    },
    "type-check": {
      "outputs": [],
      "cache": true
    }
  }
}
