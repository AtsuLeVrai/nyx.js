{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": false,
      "dependsOn": ["^dev", "clean"],
      "outputs": ["dist/**"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", ".env*"]
    },
    "build": {
      "dependsOn": ["^build", "clean"],
      "outputs": ["dist/**"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "package.json"]
    },
    "clean": {
      "cache": false
    },
    "format": {
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
      "outputs": []
    },
    "check": {
      "dependsOn": ["^check"],
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
      "outputs": []
    },
    "type-check": {
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "tsconfig.json"
      ],
      "outputs": []
    }
  }
}
