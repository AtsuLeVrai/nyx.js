{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@nyxjs/playgorund",
  "version": "1.0.0-private",
  "private": true,
  "description": "A playground for Nyx.js",
  "license": "AGPL-3.0-only",
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "scripts": {
    "start": "tsx ./src/index.ts",
    "watch": "tsx ./src/index.ts --watch",
    "format": "biome format --write .",
    "lint": "biome lint --write --unsafe .",
    "check": "biome check --write --unsafe ."
  },
  "dependencies": {
    "nyx.js": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.10.5",
    "dotenv": "^16.4.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
