{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@nyxjs/workspace",
  "version": "1.0.0-private",
  "private": true,
  "readme": "README.md",
  "license": "AGPL-3.0-only",
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/3tatsu/nyx.js",
    "directory": "internals/workspace"
  },
  "bugs": {
    "url": "https://github.com/3tatsu/nyx.js/issues"
  },
  "author": {
    "name": "3tatsu",
    "url": "https://github.com/3tatsu"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production tsx src/rest.ts",
    "dev": "cross-env NODE_ENV=development tsx src/index.ts --watch",
    "format": "biome format --write .",
    "lint": "biome lint --write --unsafe .",
    "check": "biome check --write --unsafe ."
  },
  "dependencies": {
    "@nyxjs/core": "workspace:*",
    "@nyxjs/gateway": "workspace:*",
    "@nyxjs/rest": "workspace:*",
    "@nyxjs/store": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.10.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
